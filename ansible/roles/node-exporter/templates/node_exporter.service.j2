[Unit]
Description=Prometheus Node Exporter Version {{ node_exporter_version }} for machine metrics
Documentation=https://github.com/prometheus/node_exporter
[Service]
Restart=always
User={{ node_exporter_user }}
Group={{ node_exporter_user }}
EnvironmentFile={{ environment_directory }}/{{ environment_file }}
ExecStart={{ node_exporter_bin }} $OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no
[Install]
WantedBy=multi-user.target